{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "funcAppResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group that has Function App related resources."
            }
        },
        "eventGridSystemTopicResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group that has the Event Grid System Topic resource."
            }
        },
        "eventGridSystemTopicName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Event Grid System Topic resource. A lock for the Event Grid System Topic will only be created if this value is not empty."
            }
        },
        "lockName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64,
            "metadata": {
                "description": "The name of resource locks."
            }
        },
        "lockLevel": {
            "type": "string",
            "allowedValues": [
                "CanNotDelete",
                "ReadOnly"
            ],
            "metadata": {
                "description": "The resource lock level."
            }
        },
        "lockNotes": {
            "type": "string",
            "metadata": {
                "description": "The notes for resource locks."
            }
        }
    },
    "variables": {
        "shouldLockEventGridSystemTopic": "[not(empty(parameters('eventGridSystemTopicName')))]"
    },
    "resources": [
        // Resource lock for the resource group for Function App
        {
            "name": "resource-tagging-lock-funcapp-resource-group",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "resourceGroup": "[parameters('funcAppResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "lockName": {
                        "value": "[parameters('lockName')]"
                    },
                    "lockLevel": {
                        "value": "[parameters('lockLevel')]"
                    },
                    "lockNotes": {
                        "value": "[parameters('lockNotes')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "lockName": {
                            "type": "string"
                        },
                        "lockLevel": {
                            "type": "string"
                        },
                        "lockNotes": {
                            "type": "string"
                        }
                    },
                    "resources": [
                        {
                            "name": "[parameters('lockName')]",
                            "type": "Microsoft.Authorization/locks",
                            "apiVersion": "2020-05-01",
                            "properties": {
                                "level": "[parameters('lockLevel')]",
                                "notes": "[parameters('lockNotes')]"
                            }
                        }
                    ]
                }
            }
        },

        // Resource lock for Event Grid System Topic
        {
            "condition": "[variables('shouldLockEventGridSystemTopic')]",
            "name": "resource-tagging-lock-event-grid-system-topic",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "resourceGroup": "[parameters('eventGridSystemTopicResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "eventGridSystemTopicName": {
                        "value": "[parameters('eventGridSystemTopicName')]"
                    },
                    "lockName": {
                        "value": "[parameters('lockName')]"
                    },
                    "lockLevel": {
                        "value": "[parameters('lockLevel')]"
                    },
                    "lockNotes": {
                        "value": "[parameters('lockNotes')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "eventGridSystemTopicName": {
                            "type": "string"
                        },
                        "lockName": {
                            "type": "string"
                        },
                        "lockLevel": {
                            "type": "string"
                        },
                        "lockNotes": {
                            "type": "string"
                        }
                    },
                    "resources": [
                        {
                            "name": "[parameters('lockName')]",
                            "type": "Microsoft.Authorization/locks",
                            "apiVersion": "2020-05-01",
                            "scope": "[format('Microsoft.EventGrid/systemTopics/{0}', parameters('eventGridSystemTopicName'))]",
                            "properties": {
                                "level": "[parameters('lockLevel')]",
                                "notes": "[parameters('lockNotes')]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
